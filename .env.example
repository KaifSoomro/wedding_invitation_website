# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Analytics (optional)
# Get key from: https://analytics.google.com/
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Alternative: Plausible Analytics
# Get from: https://plausible.io/
VITE_PLAUSIBLE_DOMAIN=your-domain.com

# Error Tracking (optional)
# Get DSN from: https://sentry.io/
VITE_SENTRY_DSN=https://xxxxxxxxx@sentry.io/xxxxxxx
VITE_SENTRY_ENVIRONMENT=development

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Feature Flags (optional)
VITE_ENABLE_CLOUD_SAVE=false
VITE_ENABLE_PREMIUM_FEATURES=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false

# App Configuration
VITE_APP_NAME=Wedding Card Designer
VITE_APP_URL=https://wedding-card-designer.vercel.app
VITE_SUPPORT_EMAIL=support@wedding-card-designer.com

# Storage Configuration
VITE_MAX_IMAGE_SIZE=5242880
VITE_MAX_UPLOAD_SIZE=10485760

# Production Build Settings
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_DATE=2026-01-12
